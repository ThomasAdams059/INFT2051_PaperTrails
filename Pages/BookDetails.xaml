<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperTrails_ThomasAdams_c3429938.Pages.BookDetails"
             Title="">

    <ScrollView>
        <VerticalStackLayout>
            <Image
                Source="book_placeholder.png"
                HorizontalOptions="Center"
                HeightRequest="200"
                WidthRequest="300"/>

            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill" />

            <Label
                Text="Title Placeholder"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Center"
                Margin="0, 5, 0, 0"/>

            <Label
                Text="Book Description...Lorem ipsum dolor sit amet consectetur adipiscing elit. Quisque faucibus ex sapien vitae pellentesque sem placerat. In id cursus mi pretium tellus duis convallis. Tempus leo eu aenean sed diam urna tempor. Pulvinar vivamus fringilla lacus nec metus bibendum egestas. Iaculis massa nisl malesuada lacinia integer nunc posuere. Ut hendrerit semper vel class aptent taciti sociosqu. Ad litora torquent per conubia nostra inceptos himenaeos."
                SemanticProperties.HeadingLevel="Level3"
                FontSize="14"
                Margin="10, 5, 0, 10"/>

            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill" />

            <Grid ColumnDefinitions="*, *" Margin="0, 0">
                <Label
                    Grid.Column="0"
                    Text="Genre: ###"
                    FontSize="16"
                    HorizontalOptions="Start"
                    Margin="10"/>

                <Label
                    Grid.Column="1"
                    Text="Page Count: ###"
                    FontSize="16"
                    HorizontalOptions="End"
                    Margin="10"/>
            </Grid>

            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill" />

            <Button
                Text="Read"
                Margin="0, 20"
                WidthRequest="200"
                HorizontalOptions="Center"
                Clicked="ReadButton_Clicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>