<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperTrails_ThomasAdams_c3429938.Pages.StatsPage"
             xmlns:local="clr-namespace:PaperTrails_ThomasAdams_c3429938.Models"
             xmlns:pages="clr-namespace:PaperTrails_ThomasAdams_c3429938.Pages"
             Title="">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="10,10"
            VerticalOptions="Start">

            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill" />

            <Label
                Text="Reading Stats"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="20"
                HorizontalOptions="Center"
                Margin="5"/>

            <Grid ColumnDefinitions="*, *" RowDefinitions="140, Auto">

                <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                    <Border Grid.Row="0" Grid.Column="0" Stroke="LightGray" StrokeThickness="1" Padding="5, 10" Margin="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="350" />
                        </Border.StrokeShape>
                        <VerticalStackLayout
                            Spacing="5"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">

                            <Label
                                Text="25"
                                FontSize="20"
                                FontAttributes="Bold"
                                HorizontalOptions="Center" />

                            <Image
                                Source="mybooks_tabbar_icon_bw.png"
                                HeightRequest="40"
                                WidthRequest="50"
                                HorizontalOptions="Center" />

                            <Label
                                Text="Books Read"
                                FontSize="14"
                                HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                    <Border Grid.Row="0" Grid.Column="0" Stroke="LightGray" StrokeThickness="1" Padding="5, 10" Margin="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="350" />
                        </Border.StrokeShape>
                    
                        <VerticalStackLayout
                             Spacing="5"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

                            <Label
                                 Text="1567"
                                 FontSize="20"
                                 FontAttributes="Bold"
                                 HorizontalOptions="Center" />  

                            <Image
                                 Source="arrow_right.png"
                                 HeightRequest="40"
                                 WidthRequest="50"
                                 HorizontalOptions="Center" />

                            <Label
                                 Text="Pages Read"
                                 FontSize="14"
                                 HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                    <Border Grid.Row="0" Grid.Column="0" Stroke="LightGray" StrokeThickness="1" Padding="5, 10" Margin="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="350" />
                        </Border.StrokeShape>

                        <VerticalStackLayout
                             Spacing="5"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

                            <Label
                                 Text="3hr 25min"
                                 FontSize="20"
                                 FontAttributes="Bold"
                                 HorizontalOptions="Center" />  

                            <Image
                                 Source="arrow_right.png"
                                 HeightRequest="40"
                                 WidthRequest="50"
                                 HorizontalOptions="Center" />

                            <Label
                                 Text="Time Spent Reading"
                                 FontSize="12"
                                 HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                    <Border Grid.Row="0" Grid.Column="0" Stroke="LightGray" StrokeThickness="1" Padding="5, 10" Margin="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="350" />
                        </Border.StrokeShape>

                        <VerticalStackLayout
                             Spacing="5"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

                            <Label
                                 Text="35min"
                                 FontSize="20"
                                 FontAttributes="Bold"
                                 HorizontalOptions="Center" />

                            <Image
                                 Source="arrow_right.png"
                                 HeightRequest="40"
                                 WidthRequest="50"
                                 HorizontalOptions="Center" />

                            <Label
                                 Text="Avg. Reading Time"
                                 FontSize="12"
                                 HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Grid>

            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill" />

            <Label
                Text="Individual Book Stats"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="20"
                HorizontalOptions="Center"
                Margin="5"/>

            <BoxView HeightRequest="1" Color="Gray" HorizontalOptions="Fill" />

            <Label
                Text="Read"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Start"
                Padding="5, 0"/>

            <CollectionView ItemsSource="{Binding ReadBooks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">

                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type pages:StatsPage}}, Path=NavigateToBookStatsCommand}"
                                    CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>                            
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.25*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.1*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="book_placeholder.png" Aspect="AspectFit"/>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                <Label Text="{Binding title}" FontAttributes="Bold"/>
                                <Label Text="{Binding description}"  FontSize="12"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2" Source="arrow_right.png" Aspect="AspectFit"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Label
                Text="Reading"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"
                HorizontalOptions="Start"
                Padding="5, 0"/>

            <CollectionView ItemsSource="{Binding ReadingBooks}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">

                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type pages:StatsPage}}, Path=NavigateToBookStatsCommand}"
                                    CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.25*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.1*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="book_placeholder.png" Aspect="AspectFit"/>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                <Label Text="{Binding title}" FontAttributes="Bold"/>
                                <Label Text="{Binding description}"  FontSize="12"/>
                            </VerticalStackLayout>

                            <Image Grid.Column="2" Source="arrow_right.png" Aspect="AspectFit"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>