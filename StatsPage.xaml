<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PaperTrails_ThomasAdams_c3429938.Pages.StatsPage"
             xmlns:local="clr-namespace:PaperTrails_ThomasAdams_c3429938.Models"
             xmlns:pages="clr-namespace:PaperTrails_ThomasAdams_c3429938.Pages"
             xmlns:converters="clr-namespace:PaperTrails_ThomasAdams_c3429938.Converters"
             Title="">

    <!-- Resources for Heading Label and Background, and Converter to format TimeSpan values -->
    <ContentPage.Resources>
        <Style x:Key="HeadingLabelStyle" TargetType="VerticalStackLayout">
            <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource LightDirt}}" />
            <Setter Property="MinimumHeightRequest" Value="40" />
            <Setter Property="HorizontalOptions" Value="Fill" />
        </Style>

        <Style x:Key="HeadingLabel" TargetType="Label">
            <Setter Property="SemanticProperties.HeadingLevel" Value="Level2" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="HorizontalOptions" Value="Start" />
            <Setter Property="TextColor" Value="{AppThemeBinding Light={StaticResource Main}}" />
            <Setter Property="Padding" Value="5, 6, 0, 5" />
            <Setter Property="HorizontalOptions" Value="Center"/>
        </Style>

        <converters:TimeSpanToFormattedStringConverter x:Key="TimeSpanConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout VerticalOptions="Start">

            <VerticalStackLayout BackgroundColor="{AppThemeBinding Light={StaticResource Dirt}}">
                <Label
                    Text="Total Stats"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Margin="5"
                    FontAttributes="Bold"
                    TextColor="{AppThemeBinding Light={StaticResource Main}}"/>
            </VerticalStackLayout>
            
            <Grid ColumnDefinitions="*, *" RowDefinitions="140, Auto">

                <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                    <Border Grid.Row="0" Grid.Column="0" StrokeThickness="1" Padding="5, 10" Margin="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="350" />
                        </Border.StrokeShape>
                        <VerticalStackLayout
                            Spacing="5"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">

                            <Label
                                Text="{Binding TotalBooksRead}"
                                FontSize="20"
                                FontAttributes="Bold"
                                HorizontalOptions="Center" />

                            <Image
                                Source="mybooks_tabbar_icon_bw.png"
                                HeightRequest="40"
                                WidthRequest="50"
                                HorizontalOptions="Center" />

                            <Label
                                Text="Books Read"
                                FontSize="14"
                                HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="0" Grid.Column="1">
                    <Border Grid.Row="0" Grid.Column="0" StrokeThickness="1" Padding="5, 10" Margin="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="350" />
                        </Border.StrokeShape>
                    
                        <VerticalStackLayout
                             Spacing="5"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

                            <Label
                                 Text="{Binding TotalPagesRead}"
                                 FontSize="20"
                                 FontAttributes="Bold"
                                 HorizontalOptions="Center" />  

                            <Image
                                 Source="pageicon.png"
                                 HeightRequest="40"
                                 WidthRequest="50"
                                 HorizontalOptions="Center"
                                 BackgroundColor="{AppThemeBinding Light={StaticResource Main}}"/>

                            <Label
                                 Text="Pages Read"
                                 FontSize="14"
                                 HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="0">
                    <Border Grid.Row="0" Grid.Column="0" StrokeThickness="1" Padding="5, 10" Margin="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="350" />
                        </Border.StrokeShape>

                        <VerticalStackLayout
                             Spacing="5"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

                            <Label
                                 Text="{Binding TotalTimeSpent, Converter={StaticResource TimeSpanConverter}}"
                                 FontSize="20"
                                 FontAttributes="Bold"
                                 HorizontalOptions="Center" />  

                            <Image
                                 Source="clockicon.png"
                                 HeightRequest="40"
                                 WidthRequest="50"
                                 HorizontalOptions="Center" />

                            <Label
                                 Text="Time Spent Reading"
                                 FontSize="12"
                                 HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>

                <VerticalStackLayout Grid.Row="1" Grid.Column="1">
                    <Border Grid.Row="0" Grid.Column="0" StrokeThickness="1" Padding="5, 10" Margin="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="350" />
                        </Border.StrokeShape>

                        <VerticalStackLayout
                             Spacing="5"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

                            <Label
                                 Text="{Binding AverageReadingTime, Converter={StaticResource TimeSpanConverter}}"
                                 FontSize="20"
                                 FontAttributes="Bold"
                                 HorizontalOptions="Center" />

                            <Image
                                 Source="clockicon.png"
                                 HeightRequest="40"
                                 WidthRequest="50"
                                 HorizontalOptions="Center" />

                            <Label
                                 Text="Avg. Reading Time"
                                 FontSize="12"
                                 HorizontalOptions="Center" />
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </Grid>

            <VerticalStackLayout BackgroundColor="{AppThemeBinding Light={StaticResource Dirt}}">
                <Label
                    Text="Individual Book Stats"
                    SemanticProperties.HeadingLevel="Level2"
                    FontSize="20"
                    HorizontalOptions="Center"
                    Margin="5"
                    FontAttributes="Bold"
                    TextColor="{AppThemeBinding Light={StaticResource Main}}"/>
            </VerticalStackLayout>
            
            <VerticalStackLayout Style="{StaticResource HeadingLabelStyle}">
                <Label
                    Text="Read"
                    Style="{StaticResource HeadingLabel}"/>
            </VerticalStackLayout>

            <!-- Collection View binding set to ReadBooks list in BookViewModel, EmptyView set for when no books exist in list -->
            <CollectionView ItemsSource="{Binding ReadBooks}" EmptyView="You have not read any books." Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">

                            <!-- TapGestureRecognizer to navigate to SavedBookStatsPage when a book is selected -->
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type pages:StatsPage}}, Path=NavigateToBookStatsCommand}"
                                    CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>                            
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.25*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.1*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="{Binding thumbnail}" Aspect="AspectFit"/>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                <Label Text="{Binding title}" FontAttributes="Bold"/>
                                <Label Text="{Binding description}"  FontSize="12" MaxLines="5" LineBreakMode="TailTruncation"/>
                            </VerticalStackLayout>

                            <Border Grid.Column="2" StrokeThickness="1" HeightRequest="80" BackgroundColor="{AppThemeBinding Light={StaticResource Moss}}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="350" />
                                </Border.StrokeShape>

                                <Image Grid.Column="2" Source="arrow_right.png" Aspect="AspectFit"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <VerticalStackLayout Style="{StaticResource HeadingLabelStyle}">
                <Label
                    Text="Reading"
                    Style="{StaticResource HeadingLabel}"/>
            </VerticalStackLayout>

            <CollectionView ItemsSource="{Binding ReadingBooks}" EmptyView="You are not currently reading any books." Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">

                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type pages:StatsPage}}, Path=NavigateToBookStatsCommand}"
                                    CommandParameter="{Binding .}" />
                            </Grid.GestureRecognizers>
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.25*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="0.1*" />
                            </Grid.ColumnDefinitions>

                            <Image Grid.Column="0" Source="{Binding thumbnail}" Aspect="AspectFit"/>

                            <VerticalStackLayout Grid.Column="1" Margin="10,0">
                                <Label Text="{Binding title}" FontAttributes="Bold"/>
                                <Label Text="{Binding description}"  FontSize="12" MaxLines="5" LineBreakMode="TailTruncation"/>
                            </VerticalStackLayout>

                            <Border Grid.Column="2" StrokeThickness="1" HeightRequest="80" BackgroundColor="{AppThemeBinding Light={StaticResource Moss}}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="350" />
                                </Border.StrokeShape>

                                <Image Grid.Column="2" Source="arrow_right.png" Aspect="AspectFit"/>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>